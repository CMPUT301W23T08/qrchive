<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/codes_cardview"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="80dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/high_contrast_teal"
    card_view:cardElevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--mage of the pokemon-->
        <ImageView
            android:id="@+id/code_card_image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_profile"
            android:layout_margin="4dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/code_card_name"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Pokemon Name"/>

            <TextView
                android:id="@+id/code_card_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Pokemon Location"/>

            <TextView
                android:id="@+id/code_card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Pokemon date"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/code_card_pts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="60dp"
            android:layout_gravity="end"
            android:gravity="right"
            android:text="xyz"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:text="pts"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
