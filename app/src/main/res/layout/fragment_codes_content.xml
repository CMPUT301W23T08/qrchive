<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/codes_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    style="@style/myCardStyle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/code_card_monster_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Loading..."
            android:textStyle="bold"
            android:typeface="monospace"
            android:src="@drawable/monster110100" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/code_card_name"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Pokemon Name"/>

            <TextView
                android:id="@+id/code_card_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Pokemon Location"/>

            <TextView
                android:id="@+id/code_card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Pokemon date"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/code_card_pts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="right|bottom"
            android:text="xyz"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="pts"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>