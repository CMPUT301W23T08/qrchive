<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myCardStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/high_contrast_teal</item>
        <item name="cardElevation">8dp</item>
    </style>
    <style name="myCardStyleOnItemClick">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">18dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/high_contrast_teal</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="buttonPressed">
        <item name="colorAccent">@color/low_contrast_teal</item>
    </style>
</resources>
